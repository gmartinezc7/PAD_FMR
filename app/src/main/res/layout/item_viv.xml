<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="20dp">

    <!-- Contenedor Imagen que tiene que meter Samuel -->
    <FrameLayout
        android:id="@+id/preview_rect"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/border_rectangle"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent">
        <!-- ImageView para la imagen del anuncio -->
        <ImageView
            android:id="@+id/image_view_vivienda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <!-- Flecha izquierda -->
        <ImageButton
            android:id="@+id/btn_prev_viv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_flecha_izquierda"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Flecha derecha -->
        <ImageButton
            android:id="@+id/btn_next_viv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_flecha_derecha"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <!-- ImageView para la imagen del anuncio -->
        <ImageView
            android:id="@+id/image_view_anuncio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <!-- Flecha izquierda -->
        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_flecha_izquierda"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Flecha derecha -->
        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_flecha_derecha"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/toggle_button_bg"
            android:checked="false"
            android:textOff=""
            android:textOn=""
            android:focusable="false"
            android:layout_gravity="bottom|end"
            android:clickable="true"/>
    </FrameLayout>

    <!-- Nombre de vivienda -->
    <TextView
        android:id="@+id/name"
        android:layout_width="229dp"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:text="Nombre de la vivienda"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview_rect" />


    <TextView
        android:id="@+id/address"
        android:layout_width="243dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text="Dirección"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />


    <!-- Price -->
    <TextView
        android:id="@+id/price"
        android:layout_width="89dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:text="Precio"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preview_rect" />

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="312dp"
        android:layout_height="18dp"
        android:layout_marginTop="6dp"
        android:text="Descripción"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <!-- Owner Id -->


    <!-- Metros cuadrados -->
    <TextView
        android:id="@+id/owner_id"
        android:layout_width="312dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="Contactar dueño: "
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/metr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="Metros"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <!-- Metros cuadrados m2 -->

    <!--  para el texto  -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="32dp"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="m2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price"
        app:layout_constraintVertical_bias="0.0" />

    <HorizontalScrollView
        android:id="@+id/horizontalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/owner_id">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/detailsChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Categoria: "
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTipoCasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Tipo Casa: "
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHabitaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Habitaciones: "
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBanos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Banos: "
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipExtInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="ExtInt: "
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCompaneros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Companeros: "
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Genero: "
                android:textSize="14sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTipoBano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="TipoBano: "
                android:textSize="14sp" />

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
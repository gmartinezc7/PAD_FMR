<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <!-- Título del anuncio -->
        <TextView
            android:id="@+id/titulo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"/>

        <!-- Botón de editar alineado a la derecha -->
        <Button
            android:id="@+id/btn_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#FFFFFF"
            android:text="Editar"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/preview_rect"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/border_rectangle"
        android:padding="8dp"
        android:layout_marginBottom="15dp">
        <ImageView
            android:id="@+id/imagen_anuncio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del anuncio" />

        <!-- Flecha izquierda -->
        <ImageButton
            android:id="@+id/btn_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_flecha_izquierda"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Flecha derecha -->
        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_flecha_derecha"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />


    </FrameLayout>

    <!-- Detalle del anuncio -->
    <TextView
        android:id="@+id/ubicacion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/metros_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/precio_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:id="@+id/descripcion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:backgroundTint= "#FFFFFF"
        android:layout_gravity="end"/>

</LinearLayout>
</ScrollView>
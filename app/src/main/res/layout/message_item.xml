<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/messageSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/messageSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message content"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/message_user_background"
                android:layout_gravity="end"
                android:maxWidth="250dp"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/messageTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp"
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/messageContainerOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/messageOtherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other User Name"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/messageTextOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message content"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="#333333"
                android:background="@drawable/message_other_background"
                android:layout_gravity="start"
                android:maxWidth="250dp"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/messageTimestampOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp"
            android:textSize="12sp"
            android:textColor="#757575"
            android:gravity="start" />
    </LinearLayout>
</LinearLayout>
